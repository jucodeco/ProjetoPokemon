<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="290dp"
        android:layout_height="150dp"
        android:src="@drawable/logo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTop0f="parent"
        tools:layout_editor_absoluteY="25dp"

        />

    <View
        android:id="@+id/containtercompo"
        style="@style/container_compo"


        android:layout_width="1040dp"
        android:layout_height="245dp"
        tools:layout_editor_absoluteX="-60dp"
        tools:layout_editor_absoluteY="315dp" />

    <EditText
        android:id="@+id/edit_email"
        style="@style/edit_text"
        android:layout_marginTop="20dp"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="@id/containtercompo"
        app:layout_constraintStart_toStartOf="@id/containtercompo"
        app:layout_constraintTop_toTopOf="@id/containtercompo" />

    <EditText
        android:id="@+id/edit_senha"
        style="@style/edit_text"
        android:layout_marginTop="48dp"
        android:hint="Senha"
        app:layout_constraintEnd_toEndOf="@id/containtercompo"
        app:layout_constraintStart_toStartOf="@id/containtercompo"
        app:layout_constraintTop_toBottomOf="@id/edit_email" />



</androidx.constraintlayout.widget.ConstraintLayout>